@model IEnumerable<Data.Models.Classes.Brand>

@{
    ViewBag.Title = "Show all brands";
    Layout = "_Layout";
}

<!-- Show all brands-->
<div class="items">
    @foreach (Brand brand in Model)
    {
        <div class="item brand span-2">
            <h1>
                <a class="btn btn-outline-primary" asp-action="ViewBrand" asp-route-id="@brand.Id">@brand.Name</a>
            </h1>
        </div>
    }
</div>

@if (SignInManager.IsSignedIn(User))
{
    <!--Create a Brand -->
    <div>
        <a class="btn btn-outline-primary" asp-action="Create">Create a Brand</a>
    </div>
}