@model IEnumerable<Camera_Shop.Models.Camera>

@{
    ViewData["Title"] = "Camera Catalog";
    Layout = "_Layout";
}

<!-- Show all cameras-->
<div>
    @foreach(var camera in Model) //var camera in Model
    {
        <tr>
            <td>
                <h5><b>Camera Brand:</b> @camera.Brand</h5>
                <h5><b>Camera Model:</b> @camera.Model</h5>
                <h5><b>Camera Megapixels:</b> @camera.Megapixels</h5>
                <h5><b>Camera Base ISO:</b> @camera.BaseISO</h5>
                <h5><b>Camera Max ISO:</b> @camera.MaxISO</h5>
                
                <a class="btn btn-outline-primary" asp-action="EditCamera" asp-route-cameraId="@camera.Id">Edit</a>
                <a class="btn btn-outline-primary alert-danger" asp-action="DeleteCamera" asp-route-cameraId="@camera.Id">Delete</a>
            </td>
        </tr>
        <hr/>
    }
</div>

<!-- Create a Camera-->
<div>
    <a class="btn btn-outline-primary" asp-action="CreateCamera">Create a Camera</a>
</div>
