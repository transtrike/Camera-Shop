@model Camera_Shop.Models.Camera

@{
    ViewData["Title"] = "Delete a Camera";
    Layout = "_Layout";
}

<h1 class="alert-danger">BE CAUTIOUS! DON'T DELETE WHAT ISN'T SUPPOSED TO BE DELETED!</h1>
<br/>

<div>
    <form method="post" asp-action="DeleteACamera">
         <tr><h5><b>Camera Id:</b> <input type="text" asp-for="@Model.Id" readonly="readonly"/></h5></tr>
         <tr><h5><b>Camera Brand:</b> <input type="text" asp-for="@Model.Brand" readonly="readonly"/></h5></tr>
         <tr><h5><b>Camera Model:</b> <input type="text" asp-for="@Model.Model" readonly="readonly"/></h5></tr>
         <tr><h5><b>Megapixels:</b> <input type="text" asp-for="@Model.Megapixels" readonly="readonly"/></h5></tr>
         <tr><h5><b>Base ISO:</b> <input type="text" asp-for="@Model.BaseISO" readonly="readonly"/></h5></tr>
         <tr><h5><b>Max ISO:</b> <input type="text" asp-for="@Model.MaxISO" readonly="readonly"/></h5></tr>

        <input type="submit" value="DELETE" class="btn btn-outline-primary alert-danger"/>
    </form>
</div>

<br/>

<div>
    <a asp-action="ShowCatalog" class="btn btn-outline-primary">Back to the catalog</a>
</div>