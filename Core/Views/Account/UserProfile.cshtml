@model Camera_Shop.Models.Classes.User

@{
    Layout = "_Layout";
    ViewBag.Title = $"{Model.UserName}'s profile";
}

<div><h1>Hello @Model.UserName</h1></div>
<br/>

<div>
    <h2>Here is your info, that you have given us:</h2>
</div>
<br/>

<div>
    <!-- Replace with dynamic way of showing properties-->
    <h5>Your Username: @Model.UserName</h5>
    <h5>Your Email: @Model.Email</h5>
    
    <a class="btn btn-outline-primary" asp-action="Edit" 
       asp-controller="Account" asp-route-id="@Model.Id">Edit Profile</a>
    <a class="btn btn-outline-primary alert-danger" asp-action="Delete" 
       asp-controller="Account" asp-route-id="@Model.Id">Delete Profile</a>
</div>