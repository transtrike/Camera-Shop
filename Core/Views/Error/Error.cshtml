@model Camera_Shop.Models.ViewModels.ErrorViewModel;

@{
    ViewData["Title"] = "ERROR!";
    Layout = "_Layout";
}

<h1 class="align-content-center align-items-center alert-danger" >You've done an "ops"-ie!</h1>

<br/>

<h1>Error message: @Model.ErrorMessage</h1>

@if(Model.ErrorMessages != null)
{
    foreach(var error in Model.ErrorMessages)
    {
        <h2><b>Error</b>: @error</h2>
    }
}